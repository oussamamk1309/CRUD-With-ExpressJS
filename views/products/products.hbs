<div class="card mb-2 mt-5">
    <div class="card-header py-1 px-3">
        <h4 class="d-inline">Products list</h4>
        <a href="/products/create" class="p-1 btn btn-success float-right"><i class="fas fa-plus"></i> Create</a>
    </div>
    {{#if status }}
        <div class="alert alert-success text-center">
            Item added successfully.
        </div>
    {{/if}}
    <div class="card-body table-responsive">
        {{#if products }}
            <table class="table table-striped table-bordered text-center">
                <thead class="thead-dark">
                    <tr>
                        <th class="w-25">#</th>
                        <th class="w-50">Name</th>
                        <th class="w-25">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <td>{{ _id }}</td>
                            <td>{{ name }}</td>
                            <td>
                                <a href="/products/{{ _id }}" class="text-info mx-2"><i class="fas fa-eye"></i></a>
                                <a href="/products/{{ _id }}/edit" class="text-warning mx-2"><i class="fas fa-edit"></i></a>
                                <form action="/products/{{ _id }}/delete?_method=DELETE" method="POST" class="d-inline p-0 m-0">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-link text-danger d-inline p-0 ml-3 mr-2">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="alert alert-default text-center m-3">
                No Data!
            </div>
        {{/if}}
    </div>
</div>
