<form action="/categories/create" method="post">
    <h3 class="text-center py-2 px-4 bg-secondary rounded mx-auto my-4 text-white">Add category</h3>
    {{#if error}}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
    {{/if}}
    <div class="form-group">
        <label for="name">Name : </label>
        <input 
            type="text" 
            name="name" 
            class="form-control {{#if name_error}}is-invalid{{/if}}" 
            placeholder="Name" 
            value="{{#if data}}{{ data.name }}{{/if}}">
    </div>
    <div class="form-group">
        <label for="description">Description : </label>
        <textarea 
            name="description" 
            cols="30" rows="5" 
            class="form-control {{#if desc_error}}is-invalid{{/if}}" 
            placeholder="Description"
        >{{#if data}}{{ data.description }}{{/if}}</textarea>
    </div>
    <input type="hidden" name="updated_at" value="NULL">
    <input type="hidden" name="deleted_at" value="NULL">
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary"><i class="far fa-plus-square"></i> Create</button>
    </div>
</form>
