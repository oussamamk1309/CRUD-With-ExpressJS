<div class="w-100 mt-4 border rounded p-2">
    <h3 class="text-center py-2 px-4 bg-secondary rounded mx-auto my-4 text-white">Details of category</h3>
    <h6>{{ category.name }}</h6>
    <p>{{ category.description }}</p>
    <span class="my-2 ml-2 badge badge-pill badge-info">Created at : {{ category.created_at }}.</span><br>
    <span class="my-2 ml-2 badge badge-pill badge-light">
        {{#if category.updated_at }}
            Updated at : {{ category.updated_at }}
        {{else}}
            No updates on this category.
        {{/if}}
    </span>
    <div class="row">
        <div class="col-sm">
            <a class="btn btn-warning btn-block" href="/categories/{{ category._id }}/edit"><i class="fas fa-edit"></i> Edit</a>
        </div>
        <div class="col-sm">
            <form action="/categories/{{ category._id }}/delete?_method=DELETE" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block" type="submit"><i class="fas fa-trash-alt"></i> Remove</button>
            </form>
        </div>
    </div>
</div>
{{#if products}}
    <h5 class="text-center mt-3">Products of this category :</h5>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-right" scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td class="text-right">{{ name }}</td>
                    <td class="text-left"><a href="/products/{{ _id }}"><i class="fas fa-eye"></i></a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p class="text-center mt-3">No products of this category</p>
{{/if}}
