<form action="/categories/{{#if categoryId}}{{categoryId}}{{else}}{{ category._id }}{{/if}}/edit?_method=PUT" method="POST">
    <h3 class="text-center py-2 px-4 bg-secondary rounded mx-auto my-4 text-white">Edit category</h3>
    {{#if error}}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
    {{/if}}
    <div class="form-group">
        <label for="name">Name : </label>
        <input 
            type="text" 
            name="name" 
            class="form-control {{#if name_error}}is-invalid{{/if}}" 
            placeholder="Name" 
            value="{{#if data}}{{ data.name }}{{/if}}{{#if category}}{{category.name}}{{/if}}">
    </div>
    <div class="form-group">
        <label for="description">Description : </label>
        <textarea 
            name="description" 
            cols="30" rows="5" 
            class="form-control {{#if desc_error}}is-invalid{{/if}}" 
            placeholder="Description"
        >{{#if data}}{{ data.description }}{{/if}}{{#if category}}{{category.description}}{{/if}}</textarea>
    </div>
  <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary"><i class="fas fa-edit"></i> Edit</button>
    </div>
</form>
